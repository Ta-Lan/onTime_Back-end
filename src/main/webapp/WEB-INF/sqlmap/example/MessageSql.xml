<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="message">
    <sql id="getMaxNum">
		SELECT CONCAT('MESSAGE',
		NVL(MAX(SUBSTR(MESSAGE_NUMBER,8)),100000)+ 1) FROM MESSAGE
    </sql>
    <select id="getMessageInfo" parameterType="map" resultType="Talan.DTO.MessageDTO">
        select MESSAGE_NUMBER, MESSAGE_SENDER, MESSAGE_RECEIVER, MESSAGE_CONTENT, MESSAGE_TIME
        from MESSAGE
        <!--        <if test="messageSender != null and messageReceiver " -->
        where MESSAGE_SENDER = #{messageSender} and MESSAGE_RECEIVER = #{messageReceiver}
        or MESSAGE_SENDER = #{messageReceiver} and MESSAGE_RECEIVER = #{messageSender}
    </select>
    <insert id="insertMessage" parameterType="map">
        insert into MESSAGE
        values ((<include refid="getMaxNum"/>),#{messageSender}, #{messageReceiver}, #{messageContent})
    </insert>
